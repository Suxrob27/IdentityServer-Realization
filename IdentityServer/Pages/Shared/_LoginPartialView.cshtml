@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager;
@inject SignInManager<IdentityUser> signInManager;

@if (signInManager.IsSignedIn(User))
{
   <div>
        <p class="h4">Hello @userManager.GetUserName(User)<p />
        <a asp-page="/user/SignOut">Log Out</a>
   </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-page="/User/Registration" asp-route-returnUrl="@Context.Request.Path">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/User/LogIn" asp-route-returnUrl="@Context.Request.Path">Log In</a>
        </li>
    </ul>
}