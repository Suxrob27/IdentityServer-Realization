@page
@model IdentityServer.Pages.RoleManagement.RoleListModel
@{
}
<partial name="_NotificationPartialView">

<br />
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Role List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-3 offset-3 text-end">
                <a asp-page="/RoleManagement/CreateRole" class="btn btn-outline-success form-control">Create Role</a>
            </div>
        </div>
    @if(Model.Roles.Count() > 0)
        {
             <table class="table table-bordered table-striped">
                <tr class="table-secondary">
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th></th>
                </tr>
                @foreach(var item in Model.Roles)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                    <td>
                        <div class="text-center">
                                    <form asp-page="/RoleManagement/CreateRole" asp-page-handler="Delete" asp-route-roleId="@item.Id">
                                        <a asp-page="/RoleManagement/CreateRole"  asp-route-roleId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">Edit</a>

                                <button type="submit" onclick="return confirm('Are You SSSSUUUUURRRREEEEE?!')" class="btn btn-danger">
                                    DEEEELLLLEETTTEE
                                </button>
                                </form>
                        </div>
                    </td>
                    </tr>

                }
            </table>

        }
        