@page
@model IdentityServer.Pages.RoleManagement.CreateRoleModel
@{
    var title = "Create Role";
}
<form method="post">
    @if (Model.IdentityRole != null && !String.IsNullOrEmpty(Model.IdentityRole.NormalizedName))
    {
        title = "Edit Role";
        <input asp-for="@Model.IdentityRole.Id" hidden />
        <input asp-for="@Model.IdentityRole.NormalizedName" hidden />
    }
    <br />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-success bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">@title</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="border p-2 rounded">


                @if (Model.IdentityRole != null && !String.IsNullOrEmpty(Model.IdentityRole.NormalizedName))
                {
                    <div class="form-group">
                        <label asp-for="IdentityRole.Id" class="col-12"></label>
                        <div class="col-md-12">
                            <input asp-for="IdentityRole.Id" readonly class="form-control" />
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="IdentityRole.Name" class="col-12"></label>
                    <div class="col-md-12">
                        <input asp-for="IdentityRole.Name" class="form-control" />
                        <span asp-validation-for="IdentityRole.Name" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group pt-3 row">
                    <div class="col-md-6">
                        <a class="btn btn-secondary w-100" asp-action="Index">Back to List</a>
                    </div>
                    <div class="col-md-6 ">
                        @if (Model.IdentityRole != null && !String.IsNullOrEmpty(Model.IdentityRole.NormalizedName))
                        {
                            <input type="submit" class="btn btn-success w-100" value="Update" />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-success w-100" value="Create" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>