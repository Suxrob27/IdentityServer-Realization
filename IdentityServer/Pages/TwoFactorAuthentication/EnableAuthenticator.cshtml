@page
@model IdentityServer.Pages.TwoFactorAuthentication.EnableAuthenticatorModel
@{
}
<form method="post">
    <div class="border p-2 rounded">
        <p class="text-center">Please enter the code below in your authentication App</p>
        <p class="text-center">@Model.tfAuthenticationModel.Token</p>
        <p class="text-center">
            Alternativly, scan the below QrCode with your mobile phone.
        </p>
        <div class="text-center" id="qrCode">
             
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-12">
            <label asp-for="tfAuthenticationModel.Code" class="col-12"></label>
            <div class=" col-md-12">
                <input asp-for="tfAuthenticationModel.Code" class="text-danger"/>
                <span asp-validation-for="tfAuthenticationModel.Code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group pt-3">
            <div class="col col-md-6 offset-md-3">
                <button class="btn btn-success form-control" type="submit">
                    Submit
                </button>
            </div>
        </div>
    </div>
   </form>

@section Scripts{
    @{
        <script src="~/js/qrcode.js"></script>
        <script type="text/javascript">
            new QRCode(document.getElementById("qrCode"), "@Model.tfAuthenticationModel.QRCodeUrl");
        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}